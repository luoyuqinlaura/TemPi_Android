<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/humRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/humLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Living Room"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/humRoomValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomHygrometer"

            android:layout_centerInParent="true"
            android:text="45%"
            android:textSize="100dp" />

        <ImageView
            android:id="@+id/roomHygrometer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/humLocation"
            android:layout_marginTop="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/hygrometer" />

        <TextView
            android:id="@+id/humTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/humRoomValue"
            android:layout_centerInParent="true"
            android:text="Humidity"
            android:textSize="40dp"
            />

    </RelativeLayout>

</LinearLayout>